@*07/21*@
@*  check if the user is authenticated and if Yes, then show his FirstName and LastName;
    Else, show Login and SignUp buttons*@
@*check the cookie to see if user is authenticated*@
@if (User.Identity.IsAuthenticated)
{
    <li ngbDropdown class="nav-item dropdown text-capitalize">
        <a class="nav-link dropdown-toggle" id="dropdown01" data-toggle="dropdown"
           style="cursor: pointer;" aria-haspopup="true"
           aria-expanded="false">
            @User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.GivenName).Value
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdown01">
            <a class="dropdown-item" asp-action="Purchases" asp-controller="User">Library (myMoviesCount)</a>
            @*this anchor will lead to LogOut Action method*@
            <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Log Out</a>
            <a class="dropdown-item">My Account</a>
        </div>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Sign Up</a>
    </li>
}
