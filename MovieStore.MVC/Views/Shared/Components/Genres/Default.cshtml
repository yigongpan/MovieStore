@model IEnumerable<MoviesStore.Core.Entities.Genre>
@foreach (var genre in Model)
{
    //方法一
    @*@Html.ActionLink(genre.Name, "Genre", "Movies", new { genreId = genre.Id }, new { @class = "dropdown-item" });*@

    //方法二
    // asp-route-{value}  :Any value that is placed in {value} will be consider as a route parameter. 
    //If a default route is not found, this value will be used to generate the URL as a request parameter and value.  
                                                                          //这里写genreId的话MovieController的Actionmethod parameter也要写id,
                                                                          //才可以传参
    <a asp-action="Genre" asp-controller="Movies" class="dropdown-item" asp-route-genreId="@genre.Id"> @genre.Name</a>



}

